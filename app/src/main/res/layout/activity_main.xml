<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="br.com.silvanopessoa.autenticacao.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imgViewLogo"
        android:scaleType="centerCrop"
        android:cropToPadding="false"
        android:adjustViewBounds="false"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextLogin"
        android:hint="Username"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/imgViewLogo"
        android:layout_alignStart="@+id/button2"
        android:layout_alignEnd="@+id/button3" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPassword"
        android:layout_alignParentTop="false"
        android:hint="Password"
        android:layout_below="@+id/editTextLogin"
        android:layout_alignStart="@+id/editTextLogin"
        android:layout_alignEnd="@+id/editTextLogin" />

    <Button
        android:text="Acessar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/editTextPassword"
        android:layout_centerHorizontal="true"
        android:background="#0bb571"
        style="@style/Widget.AppCompat.Button.Colored" />

    <TextView
        android:text="Criar uma conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:id="@+id/textView" />

    <TextView
        android:text="Esqueceu a senha?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <Button
        android:text="Facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:drawableLeft="@drawable/face48"
        android:background="?attr/actionModeSplitBackground"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignStart="@+id/textView"
        android:layout_toStartOf="@+id/button" />

    <Button
        android:text="Google+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:drawableLeft="@drawable/plus48"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/holo_red_light"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_toEndOf="@+id/button" />
</RelativeLayout>
